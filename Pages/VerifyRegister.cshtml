@model TempleProject.Pages.VerifyRegisterModel

<div class ="container mt-5">
    <div class="row justify-content-center align-content-center">
 <div class ="col-sm-12 col-md-12 col-lg-4">
     <h1 class="mb-3">Please enter the Secret Code</h1>
     <form method="post">
          <div asp-validation-summary="All" class="text-danger"></div>
         <div class= "mb-3">
              <label class="form-label" asp-for="Model.SecretCode">Secert Code</label>
                    <input type="text" asp-for="Model.SecretCode" class ="form-control"/>
             <span asp-validation-for="Model.SecretCode" class="text-danger"></span>
         </div>         
         <div class="mb-3">
             <button type="submit" class="btn btn-primary">Enter</button>
         </div>
     </form>
 </div>
    </div>
</div>

