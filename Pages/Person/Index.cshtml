@page
@model TempleProject.Model.IndexModel

@{
    ViewData["Title"] = "List Of Persons";
}

<h1>List Of Persons</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].PhoneNumber)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.Person[0].TypeOfSeva)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Person) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfSeva)
            </td>
            <td>               
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>              
            </td>
        </tr>
}
    </tbody>
</table>
